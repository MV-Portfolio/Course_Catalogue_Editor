%h1.TitleText Admin Login

-if flash[:alert]
    %p= flash[:alert]
    

= form_tag do
    =label_tag :username, 'Username',:class => 'usernameText'
    =text_field_tag :username, params[:username], :class => 'usernameInput'
    
    =label_tag :password, 'Password', :class => 'passwordText'
    =password_field_tag :password, params[:password], :class => 'passwordInput'
    
    =submit_tag "Login", :class => 'loginInput'
    