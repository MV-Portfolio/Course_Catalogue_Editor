-if flash.key?(:notice)
  %div{class: "alert alert-success", role: "alert"}
    = notice
    %button{class: "close", "data-dismiss" => "alert", "aria-label" => "Close"}
      %span{"aria-hidden" => "true"}
        &times;
        
%h1 Listing courses
%table{:class => 'table table-hover'}
  %thead.thead-dark
    %tr
      %th Course Name
      %th View Details
      %th Edit Course Details
      %th Delete Course
  %tbody.sortable
    - @courses.each do |course|
      %tr{:id => course.sortable_id}
        %td= course.name
        %td= link_to 'Show', course, :class => 'btn btn-info'
        %td= link_to 'Edit', edit_course_path(course), :class => 'btn btn-primary' 
        %td= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger'
%br
= link_to 'New Course', new_course_path, :class => 'btn btn-success'